<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
  <% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-secondary"%>
  </div>
  <% end %>
  <h3 class="text-center">Articles:</h3>
  <div class="apple_pagination">
    <%= will_paginate @articles, :container => false%>
  </div>
  <%= render 'articles/article' %>
  <div class="mb-3 text-center">
    <%= link_to '[ Return to all categories]', categories_path, class: "text-info" %>
  </div>
  <div class="apple_pagination">
    <%= will_paginate @articles, :container => false%>
  </div>
