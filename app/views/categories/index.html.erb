<h1 class="text-center mt-4">Categories </h1>
<div id="categories-page">
  <div class="apple_pagination mt-4">
  <%= will_paginate @categories, :container => false %>
  </div>
      <div class="container" id="all-categories">
        <% @categories.each do |category| %>
          <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
              <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-body">
                  <h5 class="card-title" id="category-link"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
                  <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
                </div>
                <div class="card-footer text-muted">
                  <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago </small>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <div class="apple_pagination mt-4">
    <%= will_paginate @categories, :container => false %>
  </div>
</div>
<style>
#categories-page {
  background-color: #000;
}
#category-link a {
  color: #000;
}
#category-link a:hover {
  color: #9a9797; }
</style>
