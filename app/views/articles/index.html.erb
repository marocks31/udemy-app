<div id="articles-page">
<p id="notice"><%= notice %></p>
<h1 class="text-center mt-4 text-white">All Articles</h1>
<div class="container" id="all-articles">
<% @articles.each do |article| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header fst-italic">
        By: Molly
      </div>
      <div class="card-body">
        <h5 class="card-title" id="article-link"><%= link_to article.title, article_path(article) %></h5>
        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
        <%= link_to "View", article_path(article), class: "btn btn-outline-secondary"%>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-secondary"%>
        <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger"%>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
        edited <%= time_ago_in_words(article.updated_at) %> ago </small>
      </div>
    </div>
  </div>
  </div>
<% end %>
</div>
</div>
<style>
#articles-page {
  background-color: #D8BFD8;
}
#article-link a {
  color: #D8BFD8;
}
</style>
